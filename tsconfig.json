{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "composite": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "typeRoots": ["./packages/commandbar/src/typings"]
  },
  "references": [
    { "path": "packages/commandbar" },
    { "path": "packages/module-plugin" },
    { "path": "packages/ui-plugin" }
  ],
  "exclude": [
    "node_modules",
    "Tests",
  ]
}
